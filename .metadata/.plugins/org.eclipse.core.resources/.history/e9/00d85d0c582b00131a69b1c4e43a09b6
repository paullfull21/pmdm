package com.dam.pmdm.realizarllamada;

import android.app.Activity;
import android.content.Intent;
import android.net.Uri;
import android.os.Bundle;
import android.view.Menu;
import android.view.View;
import android.widget.EditText;
import android.widget.ImageButton;

public class LlamadaActivity extends Activity {

	ImageButton btnLlamada;
	ImageButton btnDial;
	EditText telefonoUsuario;
	
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_llamada);
        
        //Rescato el objeto asociado al botón de llamada, mediante el "id" R.id.buttonCall
        btnLlamada = (ImageButton) findViewById(R.id.buttonCall);

        //Rescato el objeto asociado al botón de dial, mediante el "id" R.id.buttonDial
        btnDial = (ImageButton) findViewById(R.id.buttonDial);
        
        // Idem para el teléfono introducido por el usuario.
        telefonoUsuario = (EditText) findViewById(R.id.phoneNumber);
        
        // Gestiono el evento click del botón de llamada
        btnLlamada.setOnClickListener(new View.OnClickListener() {
			
			@Override
			public void onClick(View v) {
				// Defino un Intent que realice la llamada sobre el número de teléfono escrito
				// por el usuario
				
				// El parámetro "tel:" de la acción ACTION_CALL, es para indicar el número de teléfono.
				// Si quisiéramos llamar a un teléfono predefinido, p.e. 112 de emergencia:
				// Intent intentLlamada = new Intent(Intent.ACTION_CALL,Uri.parse("tel:112"));
				
				String telefonoLlamada = telefonoUsuario.getText().toString();
				Intent intentLlamada = new Intent(Intent.ACTION_MAIN,Uri.parse("tel:"+telefonoLlamada));
				startActivity(intentLlamada);
			}
		});
        
        // Gestiono el evento click del botón de dial
        btnDial.setOnClickListener(new View.OnClickListener() {
			
			@Override
			public void onClick(View v) {
				// Defino un Intent que realice la llamada sobre el número de teléfono escrito
				// por el usuario
				
				// El parámetro "tel:" de la acción ACTION_DIAL, es para indicar el número de teléfono.
				// Si quisiéramos llamar a un teléfono predefinido, p.e. 112 de emergencia:
				// Intent intentLlamada = new Intent(Intent.ACTION_DIAL,Uri.parse("tel:112"));
				
				String telefonoLlamada = telefonoUsuario.getText().toString();
				Intent intentLlamada = new Intent(Intent.ACTION_DIAL,Uri.parse("tel:"+telefonoLlamada));
				startActivity(intentLlamada);
			}
		});
    }


    @Override
    public boolean onCreateOptionsMenu(Menu menu) {
        // Inflate the menu; this adds items to the action bar if it is present.
        getMenuInflater().inflate(R.menu.llamada, menu);
        return true;
    }
    
}
